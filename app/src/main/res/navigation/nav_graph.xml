<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Halaman Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.asistenguru.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <!-- Halaman Web AI -->
    <fragment
        android:id="@+id/webAiFragment"
        android:name="com.example.asistenguru.ui.web.WebAiFragment"
        android:label="Web AI"
        tools:layout="@layout/fragment_web_ai" />

    <!-- Halaman Prompt AI -->
    <fragment
        android:id="@+id/promptAiFragment"
        android:name="com.example.asistenguru.ui.prompt.PromptAiFragment"
        android:label="Prompt AI"
        tools:layout="@layout/fragment_prompt_ai" />

    <!-- Halaman Database -->
    <fragment
        android:id="@+id/databaseFragment"
        android:name="com.example.asistenguru.ui.database.DatabaseFragment"
        android:label="Database"
        tools:layout="@layout/fragment_database" />

    <!-- Halaman Semua Prompt Detail -->
    <fragment
        android:id="@+id/promptDetailFragment"
        android:name="com.example.asistenguru.ui.prompt.PromptDetailFragment"
        android:label="Detail Prompt"
        tools:layout="@layout/fragment_prompt_detail" />

    <!-- Halaman Detail (untuk kategori prompt / web) -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.asistenguru.ui.detail.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail" />

</navigation>
