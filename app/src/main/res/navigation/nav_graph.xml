<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.asistenguru.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.example.asistenguru.ui.CategoryListFragment"
        android:label="fragment_category_list"
        tools:layout="@layout/fragment_category_list">
        <argument
            android:name="pageTitle"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/webAiFragment"
        android:name="com.example.asistenguru.ui.CategoryListFragment"
        android:label="Web AI"
        tools:layout="@layout/fragment_category_list">
        <argument
            android:name="pageTitle"
            android:defaultValue="Web AI" />
    </fragment>

    <fragment
        android:id="@+id/promptAiFragment"
        android:name="com.example.asistenguru.ui.CategoryListFragment"
        android:label="Prompt AI"
        tools:layout="@layout/fragment_category_list">
        <argument
            android:name="pageTitle"
            android:defaultValue="Prompt AI" />
    </fragment>

    <fragment
        android:id="@+id/databaseFragment"
        android:name="com.example.asistenguru.ui.DatabaseFragment" android:label="fragment_database"
        tools:layout="@layout/fragment_database" />

</navigation>